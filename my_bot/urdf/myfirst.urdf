<?xml version="1.0"?>
<robot name="my_bot">
    <material name="orange">
        <color rgba="1 0.27 0.0 1"/>
    </material>
    <material name="blue">
        <color rgba="0.0 0.0 0.8 1"/>
    </material>
    <material name="black">
        <color rgba="0.0 0.0 0.0 1"/>
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.2 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.12" length="0.05"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57075 0.0 0.0"/>
            <material name="blue"/>
        </visual>
    </link>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.12" length="0.05"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57075 0.0 0.0"/>
            <material name="blue"/>
        </visual>
    </link>
    <link name="castor">
        <visual>        
            <geometry>
                <sphere radius="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <joint name="base_rightwheel" type="fixed">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.2 -0.16 0.0"/>
    </joint>
    <joint name="base_leftwheel" type="fixed">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.2 0.16 0.0"/>
    </joint>
    <joint name="base_castor" type="fixed">
        <parent link="base_link"/>
        <child link="castor"/>
        <origin xyz="-0.19 0.0 -0.05"/>
    </joint>

</robot>
